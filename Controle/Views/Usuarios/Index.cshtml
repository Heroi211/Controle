@model IEnumerable<Controle.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p style="color:bisque">
    <h3>Listagem</h3>
</p>
<table class="table table-bordered" >
    <tr>
        <th class="warning" style="color:black">
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th class="warning" style="color:black">
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th class="warning" style="color:black">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="warning" style="color:black">
            @Html.DisplayNameFor(model => model.Perfil)
        </th>
        <th class="warning" style="color:black">
            @Html.DisplayNameFor(model => model.Bl_Ativo)
        </th>
        <th class="warning" style="color:black">
            @Html.DisplayNameFor(model => model.RegData)
        </th>
        <th class="warning"></th>
    </tr>

@foreach (var item in Model) {
    <tr class="active" style="color:bisque">
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Senha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Perfil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bl_Ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegData)
        </td>
        <td class="btn bg-secondary btn-lg" style="color:black">
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
